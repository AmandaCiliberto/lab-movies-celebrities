<h2>Edit movie</h2>

<form action="/movies/{{movie._id}}/edit" method="post">
    <label for="title">Title<label>
  <input type="text" name="title" value="{{movie.title}}"/>

     <label for="genre">Genre<label>
<input type="text" name="genre" value="{{movie.genre}}" />
   
     <label for="plot">Plot<label>
<input type="text" name="plot" value="{{movie.plot}}" />

<label for="title">Cast</label>
    <select multiple name="cast">
      {{#each movie.cast}}
        <option value="{{this._id}}" selected>
          {{this.name}}
        </option>
      {{/each}}
    </select>
   </div>
<button type="submit">Save changes</button>
</form>